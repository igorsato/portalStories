
<div class="panel panel-default">
  <div class="panel-heading">
		<h4>Clientes</h4>
		<div class="container"> 		
		  <div class="row">
				<ul class="nav navbar-nav navbar-left">
			    <li><a href="<%=url_for(new_manage_customer_path)%>" class="btn btn-default">Criar novo cliente</a></li>
				</ul>
				<%=render partial: "manage/partials/search", locals: {object: manage_customers_path} %>				
		  </div>
	  </div>
  </div>
	<% if flash[:success] %>
    <div class="notice alert alert-success text-center"><%= flash[:success] %></div>
  <% end %>
	<% if flash[:error] %>
    <div class="notice alert alert-danger text-center"><%= flash[:error] %></div>
  <% end %>	
  <div class="row">
  	<div class="col-lg-12 table-responsive">
				<table class="table table-hover">
					<thead>
						<tr>
							<th>Nome</th>
							<th>Email</th>
							<th>Tipo de Acesso</th>
							<th style="width:5%;">Ação</th>
						</tr>
					</thead>
					<tbody>
							<%@customers.each do |customer|%>
                <% if !customer.blank?%>
                  <tr class="clickable" data-href="<%=manage_customer_path(customer.id)%>">
                    <td><%=customer.name%> <%=customer.lastname%></td>
                    <td><%=customer.email%></td>
                    <td><%=access_type(customer.access.name) if !customer.access.blank? %></td>
                    <td>
                      <%=link_to edit_manage_customer_path(customer.id) do%>
                        <i class="fa fa-pencil-square-o fa-lg default-color" aria-hidden="true"></i>
                      <%end%>
                    </td>
                  </tr>
              <%end%>
						<%end%>
					</tbody>
		  	</table>		
		</div>
	</div>
</div>
