<div class="panel panel-default">
  <div class="panel-heading">
		<h4>Categorias</h4>
		<div class="container"> 		
		  <div class="row">
				<ul class="nav navbar-nav navbar-left">
			    <li><a href="<%=url_for(new_manage_category_path)%>" class="btn btn-default">Criar Nova Categoria</a></li>
			  </ul>
				<%=render partial: "manage/partials/search", locals: {object: manage_categories_path} %>
		  </div>
	  </div>
  </div>
	<% if flash[:success] %>
    <div class="notice alert alert-success text-center"><%= flash[:success] %></div>
  <% end %>
	<% if flash[:error] %>
    <div class="notice alert alert-danger text-center"><%= flash[:error] %></div>
  <% end %>	
  <div class="panel-body">
  	<div class="col-lg-12 table-responsive">
				<table class="table table-hover">
					<thead>
						<tr>
							<th style="width:95%;" class="align-left">Nome da Categoria</th>
							<th style="width:5%;">Ação</th>
						</tr>
					</thead>
					<tbody>
							<%@categories.each do |category|%>
								<tr>
									<td class="align-left"><%=category.name%></td>
									<td>
										<%=link_to edit_manage_category_path(category.id) do%>
											<i data-toggle="tooltip" data-delay='3' data-placement='left auto' title="Editar Categoria" class="fa fa-pencil-square-o fa-lg default-color" aria-hidden="true"></i>
										<%end%>
										<%=link_to manage_category_path(category.id), method: :delete do%>
											<i data-toggle="tooltip" data-delay='3' data-placement='left auto' title="Remover Categoria" class="fa fa-trash-o fa-lg default-color" aria-hidden="true"></i>
										<%end%>										
									</td>
								</tr>
							<%end%>
					</tbody>
		  	</table>
				<div class="col-lg-12 text-center">
					<%= paginate @categories, views_prefix: 'manage/'%>
				</div>				
		</div>
	</div>
</div>