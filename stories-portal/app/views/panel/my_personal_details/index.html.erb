<%= render partial: "/layouts/partials/top_background_randon", locals: {name: 'Painel do Cliente'} %>

<div class='oxy-section'>
   <div class='oxy-section__content'>
<%=form_for @customer, as: :customer , url: panel_my_personal_details_customer_path, method: :patch do |f| %>

      <div class="mdl-grid mdl-grid--no-fullwidth">
         <div class="mdl-cell mdl-cell--3-col mdl-cell--8-col-tablet mdl-cell--4-col-phone mdl-cell--2-order-tablet mdl-cell--2-order-phone">
            <div class="mdl-card mdl-shadow--2dp oxy-widget">
               <div class="mdl-card__title oxy-widget__title mdl-card--border">
                  <i class="material-icons">&#xE853;</i>
                  <h3 class=mdl-card__title-text>Meus Dados</h3>
               </div>
               <div class="mdl-card__supporting-text oxy-widget__content">
                  <%=render 'panel/partials/links'%>
               </div>
            </div>
         </div>

        <div class="mdl-grid mdl-cell mdl-cell--9-col mdl-cell--6-col-tablet mdl-cell--4-col-phone oxy-margin-bottom-40">
        <div class="mdl-shadow--2dp oxy-card-order" id="error-explanation">
        
        </div>
                <div class="mdl-cell mdl-cell--12-col mdl-cell--4-col-tablet mdl-cell-4-col-phone">
                    <div class="mdl-textfield mdl-textfield--full-width mdl-textfield--floating-label mdl-js-textfield">
                        <%=f.label :email, class: 'mdl-textfield__label'%>
                        <%=f.text_field :email, class: 'mdl-textfield__input', disabled: true%>
                    </div>
                </div>
        
                <div class="mdl-cell mdl-cell--6-col mdl-cell--4-col-tablet mdl-cell-4-col-phone">
                    <div class="mdl-textfield mdl-textfield--full-width mdl-textfield--floating-label mdl-js-textfield">
                        <%=f.label :name, class: 'mdl-textfield__label'%>
                        <%=f.text_field :name, class: 'mdl-textfield__input' %>
                    </div>
                </div>
                <div class="mdl-cell mdl-cell--6-col mdl-cell--4-col-tablet mdl-cell-4-col-phone">
                    <div class="mdl-textfield mdl-textfield--full-width mdl-textfield--floating-label mdl-js-textfield">
                        <%=f.label :lastname, class: 'mdl-textfield__label' %>
                        <%=f.text_field :lastname, class: 'mdl-textfield__input' %>
                    </div>
                </div>
                <div class="mdl-cell mdl-cell--6-col mdl-cell--8-col-tablet mdl-cell-4-col-phone">
                    <div class="mdl-textfield mdl-textfield--full-width mdl-textfield--floating-label mdl-js-textfield">
                        <%=f.label :cpf, class: 'mdl-textfield__label' %>
                        <%=f.text_field :cpf, class: 'mdl-textfield__input maskcpf' %>
                    </div>
                </div>
                <div class="mdl-cell mdl-cell--6-col mdl-cell--8-col-tablet mdl-cell-4-col-phone">
                    <div class="mdl-textfield mdl-textfield--full-width mdl-textfield--floating-label mdl-js-textfield">
                        <%=f.label :username, class: 'mdl-textfield__label' %>
                        <%=f.text_field :username, class: 'mdl-textfield__input' %>
                    </div>
                </div>
                <div class="mdl-cell mdl-cell--12-col mdl-cell--4-col-tablet mdl-cell-4-col-phone">
                    <%= f.submit 'Alterar', class:"mdl-button mdl-js-button mdl-button--raised mdl-button--colored", id:'submit_customer'%>
                </div>
            </div>
         </div>
            <%end%>
      </div>
   </div>


